<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Маскирование чувствительных данных в сообщениях (пароли, токены, ключи, заголовки). -->
    <conversionRule conversionWord="redact" converterClass="org.verdikt.config.RedactingMessageConverter"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %redact — сообщение после маскирования чувствительных данных -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level --- [%15.15t] %-40.40logger{39} : %redact%n%wEx</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
